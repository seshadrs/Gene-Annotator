<cpeDescription xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <collectionReader>
    <collectionIterator>
      <descriptor>
        <import location="sentencesCollectionReaderDescriptor.xml"/>
      </descriptor>
    </collectionIterator>
  </collectionReader>
  <casProcessors casPoolSize="3" processingUnitThreadCount="1">
    <casProcessor  deployment="integrated" name="gene candidates annotator">
      <descriptor>
        <import location="geneCandidateAnnotatorDescriptor.xml"/>
      </descriptor>      
      <deploymentParameters/>
      <filter/>
      <errorHandling>
        <maxConsecutiveRestarts action="terminate" value="0"></maxConsecutiveRestarts>
        <errorRateThreshold action="terminate" value="0/1000"></errorRateThreshold>
        <timeout default="100000" max="100000"></timeout>
      </errorHandling>
      <checkpoint batch="1000" file="" ></checkpoint>
    </casProcessor>
    <casProcessor  deployment="integrated" name="gene candidates scorer">
      <descriptor>
        <import location="HeuristicScorerDescriptor.xml"/>
      </descriptor>      
      <deploymentParameters/>
      <filter/>
      <errorHandling>
        <maxConsecutiveRestarts action="terminate" value="0"></maxConsecutiveRestarts>
        <errorRateThreshold action="terminate" value="0/1000"></errorRateThreshold>
        <timeout default="100000" max="100000"></timeout>
      </errorHandling>
      <checkpoint batch="1000" file="" ></checkpoint>
    </casProcessor>
    <casProcessor  deployment="integrated" name="gene candidates pruner">
      <descriptor>
        <import location="CandidatePrunerDescriptor.xml"/>
      </descriptor>      
      <deploymentParameters/>
      <filter/>
      <errorHandling>
        <maxConsecutiveRestarts action="terminate" value="0"></maxConsecutiveRestarts>
        <errorRateThreshold action="terminate" value="0/1000"></errorRateThreshold>
        <timeout default="100000" max="100000"></timeout>
      </errorHandling>
      <checkpoint batch="1000" file="" ></checkpoint>
    </casProcessor>
    <casProcessor  deployment="integrated" name="gene annotations cas consumer">
      <descriptor>
        <import location="geneAnnotationsCasConsumerDescriptor.xml"/>
      </descriptor>      
      <deploymentParameters/>
      <filter/>
      <errorHandling>
        <maxConsecutiveRestarts action="terminate" value="0"></maxConsecutiveRestarts>
        <errorRateThreshold action="terminate" value="0/1000"></errorRateThreshold>
        <timeout default="100000" max="100000"></timeout>
      </errorHandling>
      <checkpoint batch="1000" file="" ></checkpoint>
    </casProcessor>
  </casProcessors>
  <cpeConfig>
    <startAt>1</startAt>
    <numToProcess>-1</numToProcess>
    <checkpoint batch="1000" file="" time="100000s"></checkpoint>
    <timerImpl>org.apache.uima.internal.util.JavaTimer</timerImpl>
    <deployAs>immediate</deployAs>
  </cpeConfig>
</cpeDescription>
